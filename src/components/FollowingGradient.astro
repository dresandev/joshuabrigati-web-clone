<div id="following-gradient"></div>

<style>
	div {
		position: fixed;
		inline-size: 20vmax;
		block-size: 20vmax;
		transition: transform 0.1s ease-out;
	}

	div::before {
		content: "";
		position: absolute;
		inset: 0;
		background-image: linear-gradient(
			90deg,
			hsl(173 100% 62% / 0.8) 1.98%,
			hsl(173 100% 62% / 0.8) 1.99%,
			hsl(274 88% 50% / 0.8)
		);
		border-radius: 50%;
		filter: blur(60px);
		animation: breathe 8s linear infinite;
	}

	@keyframes breathe {
		50% {
			transform: rotate(180deg) scaleX(1.1);
		}
		100% {
			transform: rotate(1turn);
		}
	}
</style>

<script>
	import { $ } from "~/lib/dom-selector"

	const followingGradient = $("#following-gradient")!

	document.addEventListener("mousemove", (e) => {
		followingGradient.style.transform = `translate(${e.clientX - followingGradient.clientWidth / 2}px, ${e.clientY - followingGradient.clientHeight / 2}px)`
	})
</script>
